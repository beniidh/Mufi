<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_ubahpin"
    android:orientation="vertical"
    android:padding="25dp"
    tools:context=".menuUtama.PulsaPrabayar.DetailTransaksiPulsaPra">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/mukta"
        android:textAlignment="center"
        android:text="Cek Harga Digipos Sukses"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/RelativeLayout01"
        android:layout_width="fill_parent"
        android:layout_marginTop="10dp"
        android:layout_height="fill_parent"
        android:padding="6dp">

        <TextView
            android:id="@+id/mytextview1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="Nomor " />

        <TextView
            android:id="@+id/nomorD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="N/A" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/RelativeNamaPelanggan"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/namapelanggann"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="-1dp"
            android:padding="6dp"
            android:visibility="gone"
            android:text="Nama Pelanggan" />

        <TextView
            android:id="@+id/namaPelanggan"
            android:layout_width="270sp"
            android:padding="6dp"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="Hardi Kusuma"
            android:textAlignment="textEnd" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="6dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="Produk" />

        <TextView
            android:id="@+id/ProdukD"
            android:layout_width="270sp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="N/A"
            android:textAlignment="textEnd" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"

        android:layout_height="fill_parent"
        android:padding="6dp">

        <TextView
            android:id="@+id/produk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="Jenis" />

        <TextView
            android:id="@+id/JenisD"
            android:layout_width="270sp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="N/A"
            android:textAlignment="textEnd" />

    </RelativeLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="6dp"
        android:background="@drawable/dash" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="6dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="Harga"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/hargaD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="Rp.0"
            android:textStyle="bold" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/tutupdetaill"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_margin="6dp"
            android:layout_weight="1"
            android:background="@drawable/bg_button_login3"
            android:text="Tutup"
            android:textAllCaps="false"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/beli"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_margin="6dp"
            android:layout_weight="1"
            android:background="@drawable/bg_button_login2"
            android:text="Beli"
            android:textAllCaps="false"
            android:textColor="@color/white" />

    </LinearLayout>

</LinearLayout>


