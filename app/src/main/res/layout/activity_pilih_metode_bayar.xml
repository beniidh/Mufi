<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="18sp"
    tools:context=".menuUtama.PulsaPrabayar.KonfirmasiPembayaran">

    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iconkonfirmasi"
            android:layout_width="wrap_content"
            android:layout_height="50sp"
            android:padding="5dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:fontFamily="@font/opensanssemisold"
            android:text="Approve"
            android:textColor="@color/gray4"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/pemayarankonfirasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/opensanssemisold"
            android:text="Rp. 5200"
            android:textColor="@color/gray4"
            android:textSize="22dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:fontFamily="@font/opensanssemisold"
            android:text="Pilih Metode Approve"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <RelativeLayout
            android:id="@+id/LinearSaldoku"
            android:layout_width="match_parent"
            android:layout_height="73dp"
            android:layout_marginHorizontal="2dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_edittextlogin"
            android:elevation="2dp"
            android:padding="5dp">

            <LinearLayout
                android:id="@+id/lin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:orientation="vertical"
                android:padding="3dp">

                <TextView
                    android:id="@+id/saldokuket1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensansreguler"
                    android:text="Saldoku"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/saldokuket2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensanssemisold"
                    android:text="Rp.50.000"
                    android:textColor="@color/black"
                    android:textSize="19dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!--            <RadioButton-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_alignParentTop="true"-->
            <!--                android:layout_alignParentRight="true"-->
            <!--                android:layout_alignParentBottom="true"-->
            <!--                android:layout_marginTop="18dp"-->
            <!--                android:layout_marginRight="18dp"-->
            <!--                android:layout_marginBottom="18dp"-->
            <!--                android:buttonTint="@color/green" />-->

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/LinearSaldoServer"
            android:layout_width="match_parent"
            android:layout_height="73dp"
            android:layout_marginHorizontal="2dp"
            android:layout_marginTop="10sp"
            android:background="@drawable/bg_edittextlogin"
            android:elevation="2dp"
            android:padding="5dp">

            <LinearLayout
                android:id="@+id/linn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:orientation="vertical"
                android:padding="3dp">

                <TextView
                    android:id="@+id/saldoserverket1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensansreguler"
                    android:text="Saldo Server"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/saldoserverket2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensanssemisold"
                    android:text="Rp.50.000"
                    android:textColor="@color/black"
                    android:textSize="19dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!--            <RadioButton-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_alignParentTop="true"-->
            <!--                android:layout_alignParentRight="true"-->
            <!--                android:layout_alignParentBottom="true"-->
            <!--                android:layout_marginTop="18dp"-->
            <!--                android:layout_marginRight="18dp"-->
            <!--                android:layout_marginBottom="18dp"-->
            <!--                android:buttonTint="@color/green" />-->

        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/konfirmbayar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_button_login2"
        android:text="Approve"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout7"
        tools:layout_editor_absoluteX="18dp" />


</androidx.constraintlayout.widget.ConstraintLayout>