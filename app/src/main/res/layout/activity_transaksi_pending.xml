<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/swipeTransaksi"
    android:padding="18dp"
    tools:context=".menuUtama.PulsaPrabayar.TransaksiPending">

    <ScrollView
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iconTPP"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@drawable/pending"
            android:contentDescription="@string/todo" />

        <TextView
            android:id="@+id/KeteranganTP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10sp"
            android:fontFamily="@font/opensanssemisold"
            android:text="@string/pending"
            android:textColor="#FFC107"
            android:textSize="18dp"
           />

        <TextView
            android:id="@+id/hargaprodukTP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10sp"
            android:fontFamily="@font/opensanssemisold"
            android:text="Transaksi Dalam Proses"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginBottom="-35dp"
            android:elevation="5dp"
            android:padding="10sp"
            app:cardCornerRadius="35sp">

            <ImageView
                android:id="@+id/iconTP"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:scaleType="centerInside"
                android:contentDescription="@string/todo" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:background="@drawable/bg_putih"
            android:elevation="1dp"
            android:orientation="vertical"
            android:padding="10sp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="invisible"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/opensansreguler"
                android:textSize="20dp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp">

                <TextView
                    android:id="@+id/notujuan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:fontFamily="@font/opensansreguler"
                    android:text="@string/nomor_tujuan"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/nomorTP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="4dp"
                    android:layout_toStartOf="@+id/copyTelpon"
                    android:layout_toEndOf="@id/notujuan"
                    android:text=""
                    android:textAlignment="textEnd"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <ImageView
                    android:id="@+id/copyTelpon"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_baseline_file_copy_24" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp">

                <TextView
                    android:id="@+id/namatr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:fontFamily="@font/opensansreguler"
                    android:text="@string/nama"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/namaTP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="20sp"
                    android:layout_toEndOf="@id/namatr"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textAlignment="textEnd"

                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="10sp"
                    android:fontFamily="@font/opensansreguler"
                    android:text="@string/nominal_produk"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/nominalTP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="@string/rp_0"
                    android:textColor="@color/black"
                    android:textSize="15dp"

                    />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10sp"
                android:background="@drawable/bg_pink"
                android:elevation="2dp"
                android:fontFamily="@font/opensanssemisold"
                android:padding="10dp"
                android:text="@string/silahkan_hubungi_cs_jika_dalam_1x24_jam_pembelian_belum_diterima"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="11dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:background="@drawable/bg_putih"
            android:elevation="1dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:padding="10sp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                    android:fontFamily="@font/opensansreguler"
                    android:gravity="center"
                    android:textSize="15dp"
                    android:text="@string/detail_transaksi"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/expandtransaksi"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_baseline_expand_more_24"
                    android:contentDescription="@string/todo" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/linearexpand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:visibility="visible"
                android:orientation="vertical"
                android:paddingHorizontal="10sp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:fontFamily="@font/opensansreguler"
                        android:text="@string/saldo_terpakai"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/saldokuterpakai"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:text="@string/rp_0"
                        android:textColor="@color/black"
                        android:textSize="15dp"

                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:fontFamily="@font/opensansreguler"
                        android:text="@string/produkk"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/produkTransaksi"
                        android:layout_width="210sp"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:fontFamily="@font/opensansreguler"
                        android:text=""
                        android:textColor="@color/black"
                        android:textAlignment="textEnd"
                        android:textSize="15dp"

                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:fontFamily="@font/opensansreguler"
                        android:text="@string/tanggal"
                        android:textSize="16dp"
                        />

                    <TextView
                        android:id="@+id/tanggalDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="15dp"

                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:fontFamily="@font/opensansreguler"
                        android:text="@string/waktu"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/waktuDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="15dp"

                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:fontFamily="@font/opensansreguler"
                        android:text="@string/nomor_transaksi"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/NomorTransaksiDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="7dp"
                        android:layout_toStartOf="@+id/copyTransaksi"
                        android:gravity="center"
                        android:layout_marginTop="4dp"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="13dp" />

                    <ImageView
                        android:id="@+id/copyTransaksi"
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/ic_baseline_file_copy_24" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="7dp"
                    android:background="@color/gray3" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10sp">

                    <TextView
                        android:layout_weight="0.4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:fontFamily="@font/opensansreguler"
                        android:text="@string/nomor_sn"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/noSN"
                        android:layout_width="0dp"
                        android:layout_weight="0.8"
                        android:paddingVertical="3dp"
                        android:textAlignment="textEnd"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="7dp"
                        android:textSize="13dp"
                        android:textColor="@color/black"
                        android:layout_toStartOf="@+id/copy2"
                        android:text="" />

                    <ImageView
                        android:id="@+id/copySNTransaksi"
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:layout_weight="0"
                        android:src="@drawable/ic_baseline_file_copy_24" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:fontFamily="@font/opensansreguler"
                        android:text="@string/harga_produk"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/hargatotalDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:text="@string/rp_0"
                        android:textColor="@color/black"
                        android:textSize="15dp"

                        />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/tutuppending"
                    android:layout_width="0dp"
                    android:layout_margin="6dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_button_login3"
                    android:layout_height="36dp"
                    android:fontFamily="@font/opensanssemisold"
                    android:text="@string/tutup"
                    android:textSize="15dp"
                    android:textColor="@color/white"
                    android:textAllCaps="false"/>
                <Button
                    android:id="@+id/refreshstatus"
                    android:layout_width="0dp"
                    android:layout_margin="6dp"
                    android:visibility="gone"
                    android:layout_weight="1"
                    android:fontFamily="@font/opensanssemisold"
                    android:background="@drawable/bg_button_login2"
                    android:layout_height="36dp"
                    android:text="@string/cetak"
                    android:textSize="15dp"
                    android:textColor="@color/white"
                    android:textAllCaps="false"/>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    </ScrollView>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>