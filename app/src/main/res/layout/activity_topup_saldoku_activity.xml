<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="19dp"
    tools:context=".TopUpSaldoku.topup_saldoku_activity">


    <LinearLayout
        android:id="@+id/linRiwayat"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="right"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Riwayat"
            android:fontFamily="@font/poppins"
            android:layout_marginRight="2dp"
            android:textAlignment="textEnd"
            android:textColor="@color/gray4"
            android:textSize="17dp" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_history"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sisa Saldoku"
        android:layout_marginTop="14dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/saldosaatini"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins"
        android:text="RP 35.000"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="25dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_saldo"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Isi nominal Top UP"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/isisaldoku"
            android:layout_width="match_parent"
            android:inputType="number"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Pilih Nominal"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/transfersaldo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        android:text="Kirim"
        android:layout_marginRight="10sp"
        android:textAlignment="textEnd"
        android:textColor="@color/green"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/linsaldo100"
            android:layout_width="0dp"
            android:onClick="onclickLin"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_saldo"
            android:padding="10dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="40dp"
                android:src="@drawable/databasepay"
                android:layout_height="40dp"/>
            <TextView
                android:layout_width="match_parent"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_height="match_parent"
                android:text="RP.100.000"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linsaldo200"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:onClick="onclickLin"
            android:layout_marginLeft="10dp"
            android:background="@drawable/bg_saldo"
            android:padding="10dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="40dp"
                android:src="@drawable/databasepay"
                android:layout_height="40dp"/>
            <TextView
                android:layout_width="match_parent"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_height="match_parent"
                android:text="RP.200.000"
                />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/linsaldo500"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onclickLin"
            android:background="@drawable/bg_saldo"
            android:padding="10dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="40dp"
                android:src="@drawable/databasepay"
                android:layout_height="40dp"/>
            <TextView
                android:layout_width="match_parent"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_height="match_parent"
                android:text="RP.500.000"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onclickLin"
            android:id="@+id/linsaldo1000"
            android:layout_marginLeft="10dp"
            android:background="@drawable/bg_saldo"
            android:padding="10dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="40dp"
                android:src="@drawable/databasepay"
                android:layout_height="40dp"/>
            <TextView
                android:layout_width="match_parent"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_height="match_parent"
                android:text="RP1.000.000"
                />
        </LinearLayout>

    </LinearLayout>


    <Button
        android:id="@+id/bayarsaldoku"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="Proses Pembayaran"
        android:textColor="@color/white"
        android:textSize="17dp"
        android:textAllCaps="false"
        android:background="@drawable/bg_button_login2"
        />

</LinearLayout>