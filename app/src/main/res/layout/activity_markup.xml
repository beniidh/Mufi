<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="18sp"
    android:orientation="vertical"
    tools:context=".MarkUP.markup">



    <EditText
        android:id="@+id/markupNilai"
        android:layout_marginTop="15dp"
        android:inputType="number"
        android:layout_width="match_parent"
        android:hint="Masukan Harga"
        android:paddingStart="9sp"
        android:fontFamily="@font/opensansreguler"
        android:background="@drawable/bg_edittextlogin"
        android:textSize="17dp"
        android:layout_height="47dp"/>

    <Button
        android:id="@+id/markupButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:textAllCaps="false"
        android:fontFamily="@font/opensanssemisold"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:text="Simpan"
        android:background="@drawable/bg_button_login2"
        />


</LinearLayout>