<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="18dp"
    android:layout_height="wrap_content"
    tools:context=".Profil.ubah_pin">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="5dp"
        android:layout_height="440dp">
        <TextView
            android:id="@+id/idCancelPengajuanBank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="@string/x"
            android:fontFamily="@font/typografica"
            android:layout_marginBottom="50dp"
            android:textColor="@color/green"
            android:textSize="22sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mukta"
            android:text="@string/masukan_pinn"
            android:textAlignment="center"
            android:textColor="@color/green"
            android:textSize="22sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mukta"
            android:text="@string/pin_anda_digunakan_untuk_bertransaksi"
            android:textAlignment="center"
            android:textSize="18sp" />

        <com.oakkub.android.PinEditText
            android:id="@+id/pinpengajuanbank"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:inputType="number"
            android:maxLength="6"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.433"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.373"
            app:pinNormalStateDrawable="@drawable/bg_search_otp"
            app:pinHighlightStateDrawable="@drawable/bg_search_otppin"/>


    </LinearLayout>

</LinearLayout>