<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_ubahpin"
    android:orientation="vertical"
    android:padding="25dp"
    tools:context=".menuUtama.PulsaPrabayar.DetailTransaksiPulsaPra">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/opensanssemisold"
        android:text="Informasi Transaksi"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/RelativeLayout01"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="6dp">

        <TextView
            android:id="@+id/mytextview1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/opensanssemisold"
            android:layout_alignParentLeft="true"
            android:textSize="15dp"
            android:text="Nomor Tujuan" />

        <TextView
            android:id="@+id/nomortujuan"
            android:layout_width="wrap_content"
            android:fontFamily="@font/opensansreguler"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:layout_alignParentRight="true"
            android:text="085788387839" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/RelativeNamaPelanggan"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/namapelanggann"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="-1dp"
            android:padding="6dp"
            android:visibility="gone"
            android:text="Nama Pelanggan" />

        <TextView
            android:id="@+id/namaPelanggan"
            android:layout_width="270sp"
            android:padding="6dp"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="Hardi Kusuma"
            android:textAlignment="textEnd" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="6dp">

        <TextView
            android:id="@+id/produk"
            android:layout_width="wrap_content"
            android:fontFamily="@font/opensansreguler"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textSize="15dp"
            android:text="Produk" />

        <TextView
            android:id="@+id/detaildeskripsifragment"
            android:layout_width="270sp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/opensansreguler"
            android:layout_alignParentRight="true"
            android:textSize="15dp"
            android:text="Pulsa Telkomsel Rp.5000"
            android:textAlignment="textEnd" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:text="Detail Pembayaran"
        android:fontFamily="@font/opensansreguler"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="6dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/opensansreguler"
            android:textSize="15dp"
            android:layout_alignParentLeft="true"
            android:text="Harga Produk" />

        <TextView
            android:id="@+id/hargaproduk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/opensansreguler"
            android:textSize="15dp"
            android:layout_alignParentRight="true"
            android:text="5000" />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginHorizontal="6dp"
        android:background="@drawable/dash" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="6dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="Total Pemayaran"
            android:textSize="15dp"
            android:fontFamily="@font/opensanssemisold"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/totalpembayaran"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="Rp.5000"
            android:textSize="15dp"
            android:fontFamily="@font/opensanssemisold"
            android:textStyle="bold" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/tutupdetail"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_margin="6dp"
            android:layout_weight="1"
            android:background="@drawable/bg_button_login3"
            android:text="Tutup"
            android:textSize="15dp"
            android:fontFamily="@font/opensanssemisold"
            android:textAllCaps="false"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/konfirmasidetail"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_margin="6dp"
            android:layout_weight="1"
            android:background="@drawable/bg_button_login2"
            android:text="Konfirmasi"
            android:textSize="15dp"
            android:fontFamily="@font/opensanssemisold"
            android:textAllCaps="false"
            android:textColor="@color/white" />

    </LinearLayout>

</LinearLayout>


