<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10sp"
    tools:context=".CetakStruk.StrukPLNPasca.CetakPlnPasca">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/EditHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_gravity="right"
            android:src="@drawable/ic_baseline_edit_24" />

        <LinearLayout
            android:id="@+id/LinCetakPasca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/bg_putih"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginRight="40dp"
                android:hint="Header"
                android:text="" />


            <TextView
                android:id="@+id/KonterPS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Gita Cell BRI LINK"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/AlamatPS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jl. Ir Sutami KM 18"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/WaktuPS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-- -- --"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/dashline" />

            <TextView
                android:id="@+id/namaPS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:text="NAMA:"
                android:textColor="@color/gray4"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/IdPS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:text="ID:"
                android:textColor="@color/gray4"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/TagihanPS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:text="PTAG:"
                android:textColor="@color/gray4"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/jumlahBulanPS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:text="JBLN:"
                android:textColor="@color/gray4"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/TarifDayaPS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:text="TD:"
                android:textColor="@color/gray4"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/SMPS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:text="SM:"
                android:textColor="@color/gray4"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/jmlhTagihanPS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:text="TAG:"
                android:textColor="@color/gray4"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5sp"
                    android:text="Admin: "
                    android:textColor="@color/gray4"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/adminPS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5sp"
                    android:text="0"
                    android:textColor="@color/gray4"
                    android:textSize="15sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/totaltagihanPS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:text="TTAG:0"
                android:textColor="@color/gray4"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/RefPS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:text="REF:"
                android:textColor="@color/gray4"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_marginTop="25dp"
                android:src="@drawable/dashline" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:text="Struk ini merupakan bukti pembayaran yang SAH, dan harap disimpan TERIMAKASIH"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/footer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginTop="30dp"
                android:layout_marginRight="40dp"
                android:layout_toEndOf="@id/EditFooter"
                android:hint="Footer"
                android:text="" />

            <ImageView
                android:id="@+id/EditFooter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="239dp"
                android:src="@drawable/ic_baseline_edit_24"
                android:visibility="gone" />


        </LinearLayout>

        <Button
            android:id="@+id/setAdmin"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/bg_chat"
            android:text="Set Admin"
            android:textAllCaps="false"
            android:textSize="10dp" />

        <EditText
            android:id="@+id/pilihPerangkat"
            android:layout_width="match_parent"
            android:layout_height="43sp"
            android:layout_marginTop="10sp"
            android:background="@drawable/bg_putih"
            android:focusable="false"
            android:hint="Pilih Perangkat"
            android:paddingStart="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:layout_marginBottom="30dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/shareStrukP"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:background="@drawable/bg_button_login3"
                android:text="Share"
                android:textAllCaps="false"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/CetakPasca"
                android:layout_width="0dp"

                android:layout_height="36dp"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:background="@drawable/bg_button_login2"
                android:text="Cetak"
                android:textAllCaps="false"
                android:textColor="@color/white" />


        </LinearLayout>
    </LinearLayout>
</ScrollView>