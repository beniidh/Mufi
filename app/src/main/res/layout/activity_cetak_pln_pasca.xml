<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="18sp"
    android:layout_height="match_parent"
    tools:context=".CetakStruk.StrukPLNPasca.CetakPlnPasca">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="2dp">

            <TextView
                android:id="@+id/header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginRight="40dp"
                android:layout_toEndOf="@id/EditHeader"
                android:hint="Edit Header"
                android:text="" />

            <ImageView
                android:id="@+id/EditHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="239dp"
                android:src="@drawable/ic_baseline_edit_24" />

        </RelativeLayout>
        <TextView
            android:id="@+id/KonterPS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gita Cell BRI LINK"
            android:textAlignment="center"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/AlamatPS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jl. Ir Sutami KM 18"
            android:textAlignment="center"
            android:textSize="14sp"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/WaktuPS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-- -- --"
            android:textAlignment="center"
            android:textSize="14sp"
            android:textColor="@color/black"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/dashline"
            />

        <TextView
            android:id="@+id/namaPS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NAMA:"
            android:layout_marginTop="10sp"
            android:textSize="15sp"
            android:textColor="@color/gray4"
            />
        <TextView
            android:id="@+id/IdPS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ID:"
            android:layout_marginTop="10sp"
            android:textSize="15sp"
            android:textColor="@color/gray4"
            />
        <TextView
            android:id="@+id/TagihanPS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PTAG:"
            android:layout_marginTop="5sp"
            android:textSize="15sp"
            android:textColor="@color/gray4"
            />
        <TextView
            android:id="@+id/jumlahBulanPS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="JBLN:"
            android:layout_marginTop="5sp"
            android:textSize="15sp"
            android:textColor="@color/gray4"
            />

        <TextView
            android:id="@+id/TarifDayaPS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TD:"
            android:layout_marginTop="5sp"
            android:textSize="15sp"
            android:textColor="@color/gray4"
            />

        <TextView
            android:id="@+id/SMPS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SM:"
            android:layout_marginTop="5sp"
            android:textSize="15sp"
            android:textColor="@color/gray4"
            />
        <TextView
            android:id="@+id/jmlhTagihanPS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TAG:"
            android:layout_marginTop="5sp"
            android:textSize="15sp"
            android:textColor="@color/gray4"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Admin: "
                android:layout_marginTop="5sp"
                android:textSize="15sp"
                android:textColor="@color/gray4"
                />
            <TextView
                android:id="@+id/adminPS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_marginTop="5sp"
                android:textSize="15sp"
                android:textColor="@color/gray4"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/totaltagihanPS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TTAG:0"
            android:layout_marginTop="5sp"
            android:textSize="15sp"
            android:textColor="@color/gray4"
            />

        <TextView
            android:id="@+id/RefPS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="REF:"
            android:layout_marginTop="5sp"
            android:textSize="15sp"
            android:textColor="@color/gray4"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_marginTop="25dp"
            android:src="@drawable/dashline"
            />
        <Button
            android:id="@+id/setAdmin"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:text="Set Admin"
            android:layout_marginBottom="5dp"
            android:textSize="10dp"
            android:textAllCaps="false"
            android:background="@drawable/bg_chat"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Struk ini merupakan bukti pembayaran yang SAH, dan harap disimpan TERIMAKASIH"
            android:textAlignment="center"
            android:textSize="14sp"
            android:layout_marginTop="20sp"
            android:textColor="@color/black"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingVertical="2dp">

            <TextView
                android:id="@+id/footer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginRight="40dp"
                android:layout_toEndOf="@id/EditFooter"
                android:hint="Edit Footer"
                android:text="" />

            <ImageView
                android:id="@+id/EditFooter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="239dp"
                android:src="@drawable/ic_baseline_edit_24" />

        </RelativeLayout>

        <EditText
            android:id="@+id/pilihPerangkat"
            android:layout_width="match_parent"
            android:layout_height="43sp"
            android:layout_marginTop="10sp"
            android:background="@drawable/bg_putih"
            android:focusable="false"
            android:hint="Pilih Perangkat"
            android:paddingStart="20sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:layout_marginBottom="30dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/shareStrukP"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:background="@drawable/bg_button_login3"
                android:text="Share"
                android:textAllCaps="false"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/CetakPasca"
                android:layout_width="0dp"

                android:layout_height="36dp"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:background="@drawable/bg_button_login2"
                android:text="Cetak"
                android:textAllCaps="false"
                android:textColor="@color/white" />


        </LinearLayout>
    </LinearLayout>
</ScrollView>