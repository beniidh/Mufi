<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="18dp"
    tools:context=".konter.tambahKonter">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:layout_marginTop="18dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:fontFamily="@font/opensanssemisold"
                android:textSize="14dp"
                android:text=" Nama Pemilik"
                />
            <EditText
                android:id="@+id/namapemilik"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:fontFamily="@font/opensansreguler"
                android:textSize="16dp"
                android:hint="Masukan Nama Pemilik "
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:fontFamily="@font/opensanssemisold"
                android:textSize="14dp"
                android:text=" Nama Konter"
                />
            <EditText
                android:id="@+id/namakonter"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:fontFamily="@font/opensansreguler"
                android:textSize="16dp"
                android:hint="Masukan Nama Konter "
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/opensanssemisold"
                android:textStyle="bold"
                android:textSize="14dp"
                android:text=" Email"
                />
            <EditText
                android:id="@+id/emailRegis"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="16dp"
                android:fontFamily="@font/opensansreguler"
                android:hint="Masukan Email "
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:fontFamily="@font/opensanssemisold"
                android:textSize="14dp"
                android:text=" Alamat"
                />
            <EditText
                android:id="@+id/alamatRegis"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="16dp"
                android:fontFamily="@font/opensansreguler"
                android:hint="Masukan Alamat "
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="14dp"
                android:fontFamily="@font/opensanssemisold"
                android:text=" Provinsi"
                />
            <EditText
                android:id="@+id/provinsi"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:fontFamily="@font/opensansreguler"
                android:textSize="16dp"
                android:hint="Pilih Provinsi "
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="14dp"
                android:fontFamily="@font/opensanssemisold"
                android:text=" Kabupaten/Kota"
                />
            <EditText
                android:id="@+id/kabupaten"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="16dp"
                android:fontFamily="@font/opensansreguler"
                android:hint="Pilih Kabupaten / Kota "
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:fontFamily="@font/opensanssemisold"
                android:text=" Kecamatan"
                />

            <EditText
                android:id="@+id/kecamatan"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="16dp"
                android:fontFamily="@font/opensansreguler"
                android:hint="Pilih Kecamatan "
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:fontFamily="@font/opensanssemisold"
                android:text=" Kelurahan"
                />

            <EditText
                android:id="@+id/kelurahan"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="16dp"
                android:fontFamily="@font/opensansreguler"
                android:hint="Pilih Kelurahan "
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:fontFamily="@font/opensanssemisold"
                android:text=" Kode Pos"
                />

            <EditText
                android:id="@+id/postCode"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="16dp"
                android:fontFamily="@font/opensansreguler"
                android:hint="Pilih Kode Pos "
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:fontFamily="@font/opensanssemisold"
                android:textSize="14dp"
                android:text=" Nomor Hanphone"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/opensansreguler"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="2dp"
                android:textColor="@color/green"
                android:textSize="12dp"
                android:text="Nomor yang didaftarkan digunakan untuk login"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/opensansreguler"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="2dp"
                android:textColor="@color/green"
                android:textSize="12dp"
                android:text="Pastikan nomor yang didaftarkan memiliki WhatsApp aktif untuk menerima kode OTP"
                />
            <EditText
                android:id="@+id/PhoneRegis"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="16dp"
                android:inputType="number"
                android:fontFamily="@font/opensansreguler"
                android:layout_marginTop="4dp"
                android:hint="Masukan Nomor "
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:fontFamily="@font/opensanssemisold"
                android:textSize="14dp"
                android:text=" Masukan PIN"
                />
            <EditText
                android:id="@+id/PINadd"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:inputType="number"
                android:maxLength="6"
                android:textSize="16dp"
                android:fontFamily="@font/opensansreguler"
                android:hint="Masukan Kode PIN (max 6 digit)"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/opensanssemisold"
                android:text=" Konfirmasi PIN"
                android:textSize="14dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/KonfirmPIN"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:inputType="number"
                android:maxLength="6"
                android:textSize="16dp"
                android:fontFamily="@font/opensansreguler"
                android:hint="Konfirmasi PIN (max 6 digit) "
                />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ProgressBar
                    android:id="@+id/progressRegister"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:visibility="gone"
                    android:layout_marginTop="23dp"
                    />

                <Button
                    android:id="@+id/DaftarKonter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="19dp"
                    android:background="@drawable/bg_button_login"
                    android:fontFamily="@font/mukta"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:text="Simpan"
                    android:textAllCaps="false"
                    android:textColor="@color/green"
                    android:textSize="20dp"
                    android:textStyle="bold" />

            </RelativeLayout>




        </LinearLayout>


    </ScrollView>


</LinearLayout>