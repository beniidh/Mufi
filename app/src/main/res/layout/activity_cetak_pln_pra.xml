<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10sp"
    tools:context=".CetakStruk.StrukPLNPasca.CetakPlnPasca">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/EditHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_gravity="right"
            android:src="@drawable/ic_baseline_edit_24" />

        <LinearLayout
            android:id="@+id/LinCetakPln"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_putih"
            android:orientation="vertical"
            android:padding="8dp"
            android:paddingVertical="2dp">

            <TextView
                android:id="@+id/header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/opensansreguler"
                android:hint="Edit Header"
                android:text=""
                android:textSize="14dp" />

            <TextView
                android:id="@+id/KonterPR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/opensanssemisold"
                android:text="Gita Cell BRI LINK"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="17dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/AlamatPR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/opensansreguler"
                android:text="Jl. Ir Sutami KM 18"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/WaktuPR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/opensansreguler"
                android:text="-- -- --"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="14dp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/dashline" />


            <TextView
                android:id="@+id/nomorPR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/opensansreguler"
                android:text="Nomor:"
                android:textColor="@color/gray4"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/namaPR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:fontFamily="@font/opensansreguler"
                android:text="NAMA:"
                android:textColor="@color/gray4"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tarifPR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:fontFamily="@font/opensansreguler"
                android:text="Tarif/Daya:"
                android:textColor="@color/gray4"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/DayaPR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:text="Daya:"
                android:textColor="@color/gray4"
                android:textSize="15dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/KWHPR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:fontFamily="@font/opensansreguler"
                android:text="KWH:"
                android:textColor="@color/gray4"
                android:textSize="15dp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/NominalPR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:text="Nominal:"
                android:textColor="@color/gray4"
                android:textSize="15dp"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5sp"
                    android:fontFamily="@font/opensansreguler"
                    android:text="Harga jual : "
                    android:textColor="@color/gray4"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/adminPR"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5sp"
                    android:text="0"
                    android:textColor="@color/gray4"
                    android:textSize="15dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/totaltagihanPR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:text="TTAG:0"
                android:textColor="@color/gray4"
                android:textSize="15dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/SNPR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:fontFamily="@font/opensansreguler"
                android:text="SN:"
                android:textColor="@color/gray4"
                android:textSize="15dp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_marginTop="25dp"
                android:src="@drawable/dashline" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:fontFamily="@font/opensansreguler"
                android:text="Struk ini merupakan bukti pembayaran yang SAH, dan harap disimpan TERIMAKASIH"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="14dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:paddingVertical="2dp">

                <TextView
                    android:id="@+id/footer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="40dp"
                    android:layout_toEndOf="@id/EditFooter"
                    android:fontFamily="@font/opensansreguler"
                    android:hint="Edit Footer"
                    android:text=""
                    android:textSize="14dp" />

                <ImageView
                    android:id="@+id/EditFooter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="239dp"
                    android:src="@drawable/ic_baseline_edit_24"
                    android:visibility="gone" />

            </RelativeLayout>

        </LinearLayout>

        <Button
            android:id="@+id/setAdmin"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/bg_chat"
            android:fontFamily="@font/opensanssemisold"
            android:text="Set Harga jual"
            android:textAllCaps="false"
            android:textSize="10dp" />


        <EditText
            android:id="@+id/pilihPerangkat"
            android:layout_width="match_parent"
            android:layout_height="43sp"
            android:layout_marginTop="10sp"
            android:background="@drawable/bg_putih"
            android:focusable="false"
            android:textSize="15dp"
            android:fontFamily="@font/opensanssemisold"
            android:hint="Pilih Perangkat"
            android:paddingStart="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:layout_marginBottom="30dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/shareStruk"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:background="@drawable/bg_button_login3"
                android:fontFamily="@font/opensanssemisold"
                android:text="Share"
                android:textSize="15dp"
                android:textAllCaps="false"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/CetakPra"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:textSize="15dp"
                android:background="@drawable/bg_button_login2"
                android:fontFamily="@font/opensanssemisold"
                android:text="Cetak"
                android:textAllCaps="false"
                android:textColor="@color/white" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>