<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="18dp"
    android:orientation="vertical"
    tools:context=".PersetujuanSaldoSales.DetailPersetujuan">

    <LinearLayout
        android:id="@+id/linn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Limit Saldo Server Saat ini"
            android:textAlignment="center"
            android:fontFamily="@font/opensansreguler"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/saldoServerSaatini"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="RP 100.000"
            android:fontFamily="@font/opensansreguler"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="24dp"
            android:layout_marginBottom="10dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_saldo"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:fontFamily="@font/opensansreguler"
                android:text="Nominal Pengajuan Limit Baru "
                android:textSize="15dp" />


            <TextView
                android:id="@+id/saldopengajuanPersetujuan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="RP 200.000"
                android:fontFamily="@font/opensansreguler"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/idTolakDetail"
                android:layout_width="0dp"
                android:layout_height="42dp"
                android:text="Tolak"
                android:background="@drawable/bgtolak_pengajuan"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:fontFamily="@font/opensanssemisold"
                android:layout_marginRight="10dp"
                android:textAllCaps="false"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/idSetujuDetail"
                android:layout_width="0dp"
                android:layout_height="42dp"
                android:text="Setuju"
                android:fontFamily="@font/opensanssemisold"
                android:background="@drawable/bgsetuju_pengajuan"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:textAllCaps="false"
                android:layout_weight="1"/>

        </LinearLayout>



        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Riwayat Pengajuan"
            android:textColor="@color/green"
            android:textSize="18dp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="3dp"
            android:background="@color/gray3" />
    </LinearLayout>


</LinearLayout>