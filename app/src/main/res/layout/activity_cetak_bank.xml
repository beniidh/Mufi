<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".CetakStruk.StrukPLNPra.cetakBank">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/EditHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:onClick="popUpEditFooterHeader"
            android:src="@drawable/ic_baseline_edit_24" />

        <LinearLayout
            android:id="@+id/lin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="18dp"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginRight="40dp"
                android:layout_toEndOf="@id/EditHeader"
                android:hint="Edit Header"
                android:text="hallo nama saya" />


            <TextView
                android:id="@+id/KonterPS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gita Cell BRI LINK"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:layout_marginTop="13dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/AlamatPS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jl. Ir Sutami KM 18"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/WaktuPS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="17 mei"
                android:fontFamily="@font/poppins"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/Harga"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/poppinsbold"
                android:text="Rp.12.000"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/dashline" />

            <TextView
                android:id="@+id/namaPS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:text="Penerima :"
                android:textColor="@color/gray4"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/IdPS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:text="Bank Penerima:"
                android:textColor="@color/gray4"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/nomorRekening"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:text="Nomor Rekening :"
                android:textColor="@color/gray4"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:text="Admin : "
                    android:textColor="@color/gray4"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/admin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:text="0"
                    android:textColor="@color/gray4"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:text="Total : "
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/total"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
            </LinearLayout>


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_marginTop="25dp"
                android:src="@drawable/dashline" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:text="Struk ini merupakan bukti pembayaran yang SAH, dan harap disimpan TERIMAKASIH"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/footer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20dp"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="5dp"
                android:hint="Edit Footer"
                android:text="Selamat Berbelanja" />
        </LinearLayout>

        <Button
            android:id="@+id/setAdmin"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/bg_chat"
            android:text="Set Admin"
            android:layout_marginRight="20dp"
            android:textAllCaps="false"
            android:textSize="10dp" />

        <EditText
            android:id="@+id/pilihPerangkat"
            android:layout_width="match_parent"
            android:layout_height="43sp"
       android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10sp"
            android:background="@drawable/bg_putih"
            android:elevation="2dp"

            android:focusable="false"
            android:hint="Pilih Perangkat"
            android:paddingStart="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="30dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/shareStrukP"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:background="@drawable/bg_button_login3"
                android:text="Share"
                android:textAllCaps="false"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/CetakPasca"
                android:layout_width="0dp"

                android:layout_height="36dp"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:background="@drawable/bg_button_login2"
                android:text="Cetak"
                android:textAllCaps="false"
                android:textColor="@color/white" />


        </LinearLayout>
    </LinearLayout>
</ScrollView>