<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="18sp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_weight="1.4"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:fontFamily="@font/opensanssemisold"
            android:textColor="@color/black"
            android:layout_height="0dp"
            android:text="Masukan Harga "
            />


        <EditText
            android:id="@+id/edithargajual"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:hint="Harga"
            android:inputType="number"
            android:layout_marginTop="20sp"
            android:textSize="16dp"
            android:textAlignment="center"
            android:fontFamily="@font/opensansreguler"
            android:layout_marginHorizontal="10sp"
            android:background="@drawable/bg_edittextlogin"
            android:paddingStart="4dp"
            android:textColor="@color/black" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">


            <Button
                android:id="@+id/buttonCancelhargajual"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:textSize="14dp"
                android:background="@drawable/bg_button_login3"
                android:text="Cancel"
                android:fontFamily="@font/opensanssemisold"
                android:textAllCaps="false"
                android:textColor="@color/white"

                />

            <Button
                android:id="@+id/buttonSavehargajual"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/bg_button_login2"
                android:gravity="center"
                android:textSize="14dp"
                android:fontFamily="@font/opensanssemisold"
                android:text="Simpan"
                android:textAllCaps="false"
                android:textColor="@color/white"

                />


        </LinearLayout>


    </LinearLayout>


</LinearLayout>