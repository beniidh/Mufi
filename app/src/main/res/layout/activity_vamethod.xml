<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_height="match_parent"
    tools:context=".TopUpSaldoku.MetodeBayar.VAMethodActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ImageVA"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/white"
            android:src="@drawable/bsi"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/JenisVA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/opensanssemisold"
        android:text=""
        android:textColor="@color/black"
        android:textSize="17dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="@+id/ImageVA"
        app:layout_constraintTop_toBottomOf="@+id/ImageVA" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bgsalessaldoku"
        android:padding="10dp"
        android:fontFamily="@font/opensansreguler"
        android:layout_marginTop="10dp"
        android:textSize="14dp"
        android:text="@string/va"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/view"
        tools:layout_editor_absoluteX="10dp" />

    <TextView
        android:id="@+id/NoVA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/opensansbold"
        android:text=""
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="@+id/JenisVA"
        app:layout_constraintTop_toBottomOf="@+id/JenisVA" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/opensanssemisold"
        android:text="Jumlah TopUp"
        android:textColor="@color/black"
        android:textSize="17dp"
        app:layout_constraintStart_toStartOf="@+id/view2"
        app:layout_constraintTop_toBottomOf="@+id/view2" />
    <ImageView
        android:id="@+id/copas"
        android:layout_width="25dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/ic_baseline_file_copy_24"
        app:layout_constraintBottom_toBottomOf="@+id/NoVA"
        app:layout_constraintStart_toEndOf="@+id/NoVA"
        app:layout_constraintTop_toBottomOf="@+id/JenisVA" />

    <TextView
        android:id="@+id/JumlahBayar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/opensanssemisold"
        android:text="Rp.-"
        android:textColor="@color/black"
        android:textSize="19dp"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/admin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/opensanssemisold"
        android:text="Rp.-"
        android:textColor="@color/black"
        android:textSize="19dp"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="10dp"
        android:background="@color/gray3"
        app:layout_constraintTop_toBottomOf="@+id/NoVA"
        tools:layout_editor_absoluteX="10dp" />


        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="10dp"
            android:background="@color/gray3"
            app:layout_constraintTop_toBottomOf="@+id/total"
            tools:layout_editor_absoluteX="10dp" />

        <TextView
            android:id="@+id/total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/opensanssemisold"
            android:text="Rp.-"
            android:textColor="@color/black"
            android:textSize="19dp"
            app:layout_constraintStart_toStartOf="@+id/textView8"
            app:layout_constraintTop_toBottomOf="@+id/textView8" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/opensanssemisold"
        android:text="Admin"
        android:textColor="@color/black"
        android:textSize="17dp"
        app:layout_constraintStart_toStartOf="@+id/JumlahBayar"
        app:layout_constraintTop_toBottomOf="@+id/JumlahBayar" />

        <TextView

            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/opensanssemisold"
            android:text="Total Bayar"
            android:textColor="@color/black"
            android:textSize="17dp"
            app:layout_constraintStart_toStartOf="@+id/admin"
            app:layout_constraintTop_toBottomOf="@+id/admin" />

    <Button
        android:id="@+id/batal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="right"
        android:background="@drawable/bgtolak_pengajuan"
        android:fontFamily="@font/opensanssemisold"
        android:padding="5dp"
        android:layout_marginTop="20dp"
        android:text="Batalkan"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        tools:layout_editor_absoluteX="10dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>