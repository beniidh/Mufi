<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    tools:context=".menuUtama.PulsaPrabayar.PulsaPrabayar_activity">

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_putih"
        android:elevation="2dp"
        android:layout_margin="3dp"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text=" Masukan Nomor"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iconproduk"
            android:layout_width="65dp"
            android:layout_height="30dp"
            android:layout_marginTop="10sp" />
        <!--            android:src="@drawable/ic_baseline_assignment_ind_24" -->


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginTop="10sp">

            <EditText
                android:id="@+id/nomorbelipulsa"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/bg_edittextlogin"
                android:hint="Input Nomor Tujuan"
                android:inputType="number"
                android:fontFamily="@font/poppins"
                android:paddingStart="7dp"
                android:paddingEnd="8sp"
                android:textSize="17dp" />

            <ImageView
                android:id="@+id/getContact"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="4dp"
                android:src="@drawable/ic_baseline_assignment_ind_24" />
        </RelativeLayout>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/reyprodukPulsaPra"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/linearLayout6"
        android:layout_marginTop="20sp"
        android:padding="5dp"
        tools:layout_editor_absoluteX="15dp"/>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animasipulsaPra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:layout_below="@id/linearLayout6"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_url="https://assets5.lottiefiles.com/private_files/lf30_2c7wnifx.json"
        />


</RelativeLayout>