<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/databasepay" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/namaProdukDH"
                    android:layout_width="0dp"
                    android:layout_weight="0.7"
                    android:fontFamily="@font/opensansreguler"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:text="Indosat 5000"
                    android:textSize="15dp"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/hargaProdukDH"
                    android:layout_width="0dp"
                    android:layout_weight="0.4"
                    android:textAlignment="textEnd"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:text="Rp.5800"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/opensanssemisold"
                    android:textColor="@color/black"
                    />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/kodeProduk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kode : GHG"
        android:layout_marginLeft="5dp"
        android:textColor="@color/gray4"
        android:fontFamily="@font/opensansreguler"
        android:layout_marginTop="2dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@color/gray2"
        />

</LinearLayout>