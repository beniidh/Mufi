<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="18dp"
    tools:context=".menuUtama.PulsaPascaBayar.PulsaPascaBayar_activity">

    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/bg_putih"
        android:elevation="2dp"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:fontFamily="@font/opensanssemisold"
            android:text=" Masukan Nomor Tujuan"
            android:textColor="@color/black"
            android:textSize="12dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iconprodukPasca"
            android:layout_width="65dp"
            android:layout_height="30dp"
            android:layout_marginTop="10sp" />
        <!--            android:src="@drawable/ic_baseline_assignment_ind_24" -->


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginTop="10sp">

            <EditText
                android:id="@+id/nomorbelipulsaPasca"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/bg_edittextlogin"
                android:fontFamily="@font/opensansreguler"
                android:hint="Nomor Tujuan"
                android:inputType="number"
                android:paddingStart="7dp"
                android:paddingEnd="8sp"
                android:textSize="17dp" />

            <ImageView
                android:id="@+id/getContact"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="4dp"
                android:src="@drawable/ic_baseline_assignment_ind_24" />
        </RelativeLayout>

    </LinearLayout>

    <com.airbnb.lottie.LottieAnimationView
        android:layout_below="@id/linearLayout7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:lottie_url="https://assets10.lottiefiles.com/packages/lf20_n2m0isqh.json"
app:lottie_autoPlay="true"
        app:lottie_loop="true"
        />

    <LinearLayout
        android:id="@+id/LinearpPasca"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearLayout7"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_putih"
        android:orientation="vertical"
        android:padding="8dp"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:fontFamily="@font/mukta"
                android:text="Nomor"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/PPnomor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text=""
                android:textStyle="bold"

                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:fontFamily="@font/mukta"
                android:text="Nama Customer"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/PPnama"
                android:layout_width="150sp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:text=""
                android:textStyle="bold"

                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:fontFamily="@font/mukta"
                android:text="Tanggal"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/PPTanggal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text=""
                android:textStyle="bold"

                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:fontFamily="@font/mukta"
                android:text="Jumlah Tagihan"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/PPjumlahTagihan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="Rp.0"
                android:textSize="15dp"
                android:textStyle="bold"

                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:fontFamily="@font/mukta"
                android:text="Transaksi"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/PPTransaksi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text=""
                android:textSize="15dp"
                android:textStyle="bold"

                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:fontFamily="@font/mukta"
                android:text="Status"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/PPstatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text=""
                android:textSize="15dp"
                android:textStyle="bold"

                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:fontFamily="@font/mukta"
                android:text="Deskripsi"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/PPdeskription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text=""
                android:textSize="15dp"
                android:textStyle="bold" />
        </RelativeLayout>


    </LinearLayout>

    <Button
        android:id="@+id/PeriksaPaketPascaPulsa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_button_login2"
        android:fontFamily="@font/opensanssemisold"
        android:text="Cek Tagihan"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20dp" />

</RelativeLayout>