<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="18dp"
    android:orientation="vertical"
    tools:context=".menuUtama.Paket.PaketData_Activity">


    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_putih"
        android:elevation="2dp"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:fontFamily="@font/opensanssemisold"
            android:text=" Masukan Nomor"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iconprodukPaketData"
            android:layout_width="65dp"
            android:layout_height="30dp"
            android:layout_marginTop="10sp"/>
        <!--            android:src="@drawable/ic_baseline_assignment_ind_24" -->


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginTop="10sp">

            <EditText
                android:id="@+id/nomorbelipulsaPaketDat"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/bg_edittextlogin"
                android:hint="Nomor Tujuan"
                android:inputType="number"
                android:fontFamily="@font/opensansreguler"
                android:paddingStart="7dp"
                android:paddingEnd="8sp"
                android:textSize="17dp" />

            <ImageView
                android:id="@+id/getContact"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="4dp"
                android:src="@drawable/ic_baseline_assignment_ind_24" />
        </RelativeLayout>


    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/ReyPaketData"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="match_parent"/>


</LinearLayout>