<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="5dp">

    <LinearLayout
        android:id="@+id/linearnotifikasi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/NTketerangantransaksi"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Transaksi tranfers ditutup"
            android:textColor="@color/black"
            android:fontFamily="@font/opensanssemisold"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/NTketeranganisi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="15dp"
            android:fontFamily="@font/opensansreguler"
            android:text="Transaksi transfer sedang tidak dapat digunakan. mohon dikondisikan."
            android:textColor="@color/gray4" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/NTtanggal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="4dp"
                android:text="22/06/2021"
                android:textSize="15dp"
                android:fontFamily="@font/opensansreguler"
                android:textColor="@color/gray4" />

            <TextView
                android:id="@+id/NTwaktu"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="4dp"
                android:text="15.30"
                android:textSize="15dp"
                android:fontFamily="@font/opensansreguler"
                android:textColor="@color/gray4" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="@color/gray2"
            />

    </LinearLayout>
</LinearLayout>