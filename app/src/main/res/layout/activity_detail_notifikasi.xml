<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="18dp"
    tools:context=".Notifikasi.DetailNotifikasi">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iconND"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginRight="8sp"
            android:background="@drawable/check" />

        <TextView
            android:id="@+id/StatusND"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:fontFamily="@font/notoregular"
            android:gravity="center"
            android:text=" Berhasil"
            android:textColor="@color/green"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5sp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tanggalND"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
           android:layout_marginEnd="8sp"
            android:fontFamily="@font/mukta"
            android:gravity="center"
            android:layout_marginTop="10sp"
            android:text="00-00-0000, "
            android:textSize="19sp"
           />

        <TextView
            android:id="@+id/waktuND"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:fontFamily="@font/mukta"
            android:gravity="center"
            android:text="00.20"
            android:layout_marginTop="10sp"
            android:textSize="19sp" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:text="Produk"
        android:textSize="17sp"
        />

    <TextView
        android:id="@+id/ProdukND"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="N/A"
        android:textColor="@color/black"
        android:textSize="18sp" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="No Tujuan"
        android:textSize="17sp"
        />

    <TextView
        android:id="@+id/notujuanND"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="N/A"
        android:textColor="@color/black"
        android:textSize="18sp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="Transaksi ID"
        android:textSize="17sp"
        />

    <TextView
        android:id="@+id/transaksiND"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="N/A"
        android:textColor="@color/black"
        android:textSize="18sp" />



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:visibility="invisible"
        android:text="Sumber Dana"
        android:textSize="17sp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:fontFamily="@font/mukta"
            android:text="Saldo Terpakai"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/SaldoND"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:fontFamily="@font/mukta"
            android:text="-Rp.0"
            android:textColor="@color/green"
            android:textSize="18sp"

            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="15sp"
        android:background="@color/gray3" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:text="Terimakasih telah melakukan transaksi"
        android:textSize="15sp"
        />



</LinearLayout>