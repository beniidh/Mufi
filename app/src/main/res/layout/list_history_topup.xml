<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp">

    <TextView
        android:id="@+id/tanggal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:textSize="12dp"
        android:text="2020/07/23" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:text="pending"
            android:textSize="17dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/harga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="Rp.25000"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/bukti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/harga"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/notoregular"
            android:text="Belum Upload Bukti"
            android:textSize="14dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="right"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/upload"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:text="Upload bukti"
            android:textSize="11dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:background="@drawable/bgsetuju_pengajuan"
            />
        <Button
            android:id="@+id/cancel"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:text="Batalkan"
            android:textSize="11dp"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:background="@drawable/bgtolak_pengajuan"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@color/gray2"
        />

</LinearLayout>